---
interface Props {
  link: string;
  text: string;
  variant?: "primary" | "secondary";
  size?: "small" | "medium";
  id?: string;
  classes?: string;
}

const {
  link,
  text,
  variant = "primary",
  size = "medium",
  id,
  classes = "",
} = Astro.props;

const getVariantClasses = (variant: string) =>
  variant === "primary"
    ? "bg-button-primary font-normal text-white hover:bg-button-primary-hover transition-colors"
    : "bg-button-secondary font-medium text-black hover:shadow-secondary-hover hover:bg-transparent transition";

const getSizeClasses = (size: string) =>
  size === "medium"
    ? "px-8 py-2 text-lg tracking-wide"
    : "px-6 py-2 text-base tracking-wider";
---

<a
  {id}
  href={link}
  class=`flex items-center justify-center rounded-lg ${getVariantClasses(variant)} ${getSizeClasses(size)} ${classes}`
  >{text}</a
>
